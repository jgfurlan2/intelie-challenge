{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "typeRoots": [
      "./node_modules/@type",
      "./src/**/*.d.ts"
    ],
    "sourceMap": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules/",
    "./__OBSOLETE__/"
  ]
}
